<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/playerToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundMain"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- TOP PLAYER UI -->
    <LinearLayout
        android:id="@+id/topPlayerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/playerToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.60">

        <!-- YOUR ORIGINAL ENTIRE PLAYER UI (unchanged) -->

        <ImageView
            android:id="@+id/imageBlurBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:alpha="0.35" />

        <ImageView
            android:id="@+id/imageCoverArt"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="-200dp"
            android:background="@drawable/rounded_card_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_note_24" />

        <TextView
            android:id="@+id/textSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/textArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/textSecondary" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/textCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/textSecondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controlsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonBack10"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_backward_24"
                android:tint="@color/textPrimary"/>

            <ImageButton
                android:id="@+id/buttonPrev"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_previous_24"
                android:tint="@color/textPrimary" />

            <ImageButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play_arrow_24"
                android:tint="@color/textPrimary" />

            <ImageButton
                android:id="@+id/buttonNext"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_next_24"
                android:tint="@color/textPrimary" />

            <ImageButton
                android:id="@+id/buttonForward10"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_fast_forward_24"
                android:tint="@color/textPrimary"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPlayerTracks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topPlayerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_track" />


</androidx.constraintlayout.widget.ConstraintLayout>
